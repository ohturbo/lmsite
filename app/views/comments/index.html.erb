<%= stylesheet_link_tag 'comments'%>
<%= link_to "Home", root_path, :class => 'home' %>

<div class="avatar-scroll">
<% @posts.each do |post| %>
	<div class="section" id="avatar-view" >
		<div class="avatar">
			<img id="body" src="/images/ears0.png">
			<img class="clothing" id="worn-skin" src="/<%= post.skin %>"></img>
			<img class="clothing" id="worn-head" src="/<%= post.head %>"></img>
			<img class="clothing" id="worn-top" src="/images/items/tops/top0.png"></img>
			<img class="clothing" id="worn-bottom" src="/images/items/bottoms/bottom0.png"></img>
			<img class="clothing" id="worn-hair" src="/<%= post.hair %>"></img>
			<img class="clothing" id="hair-backing" src="/<%= post.hairbacking %>"></img>
			<img class="clothing" id="worn-shoe" src="/images/items/shoes/shoe0.png"></img>
			<img class="clothing" id="worn-eye" src="/<%= post.eye %>"></img>
			<img class="clothing" id="worn-eyebrow" src="/<%= post.eyebrow %>"></img>
			<img class="clothing" id="worn-spectacle" src="/<%= post.spectacles %>"></img>
			<img class="clothing" id="worn-nose" src="/<%= post.nose %>"></img>
			<img class="clothing" id="worn-mouth" src="/<%= post.mouth %>"></img>
			<img class="clothing" id="worn-facehair" src="/<%= post.facehair %>"></img>
		</div>
	</div>
<% end %>
</div>
<h1 class="comments-header">Comments</h1>

<% @comments.each do |comment| %>
<div class="comment">
    <p class="comment-content"><%= comment.content %></p>
	<p class="comment-stamp"><%= (comment.created_at).strftime("%I:%M:%S %p, %d %b %Y, %Z") %> by <%= comment.user.email%></p>
	<%= link_to "Delete", comment, method: :delete, data: {confirm: "You sure?"}, class: 'label alert' %>
	<br>
</div>



<% end %>


<script type="text/javascript">
// hide broken (missing) images. (if an avatar has no glasses, beard, or hair-backing)
	document.addEventListener("DOMContentLoaded", function(event) {
	Array.from(document.querySelectorAll('img')).forEach(function(img){
  		img.onerror = function(){this.style.display='none';};
   })
});
</script>